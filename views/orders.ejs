<%- include ('partials/header') %>

<div class="container-sm p-4 bg-white">
	<h2>Your Orders</h2>
	<br>
	<% if (orders.length > 0) {%>
  <table class="table">
	  <thead>
	    <tr>
	      <th scope="col">Order ID</th>
	      <th scope="col">Date</th>
	      <th scope="col">Status</th>
	      <th scope="col">Total</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>

    <% orders.forEach(function(order){ %>
	<tr>
		<td><%= order._id %></td>
		<td><%= order.date.split(' ').slice(0,4).join(' ')%></td>
		<td><%= order.status%></td>
		<td>$<%= order.total.toFixed(2)%></td>
		<td><a href="/orders/<%= order._id%>">Details</a></td>

	</tr>

	<% }); %>

    </tbody>
  </table>

  <% } else { %><div class="message">You have no past orders.</div><%}%>
</div>

<%- include ('partials/footer') %>

<%- include ('partials/endtags') %>