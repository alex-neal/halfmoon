<%- include ('partials/header') %>
<div class="container-sm pt-4">
  <div class="row">
    <div class="col-md p-4 ml-xl-5 bg-white">
      <h1>Sign In</h1>
      <div class="formborder">
        <% if (message) {%><span class="text-danger"><%= message%></span><%}%>
        <p>Login below with an existing account</p>

        <form method="POST" action="/account/login" class="needs-validation" novalidate>
          <label for="email">Email Address</label><br>
          <input class="form-control" type="email" id="lg-email" name="email" required>
          <div class="invalid-feedback">Must be a valid email address</div><br>
          <label for="pwd">Password</label><br>
          <input class="form-control" type="password" id="lg-pwd" name="password" required>
          <div class="invalid-feedback">Password required</div><br>
          <button class="btn btn-outline-primary">Log In</button><span class="button-side-link"><a href="">Forgot Password?</a></span>
        </form>
      </div>
    </div>

    <div class="col-md p-4 mr-xl-5 bg-white">
      <h1>Create Account</h1>
      <div class="formborder">
        <p>Create an account below (all fields required)</p>
        <form method="POST" action="/account/create" class="needs-validation" novalidate>
          <label for="firstname">First Name</label><br>
          <input class="form-control" type="text" id="firstname" name="first" required>
          <div class="invalid-feedback">Required</div><br>
          <label for="lastname">Last Name</label><br>
          <input class="form-control" type="text" id="lastname" name="last" required>
          <div class="invalid-feedback">Required</div><br>
          <label for="email">Email Address</label><br>
          <input class="form-control" type="text" id="cr-email" name="email" required>
          <div class="invalid-feedback" id="em-feedback"></div><br>
          <label for="pwd">Password</label><br>
          <input class="form-control" type="password" id="cr-pwd1" name="password" required>
          <div class="invalid-feedback">Password must be at least 6 characters long and contain both letters and numbers</div><br>
          <label for="pwd">Re-Enter Password</label><br>
          <input class="form-control" type="password" id="cr-pwd2" required>
          <div class="invalid-feedback">Passwords do not match</div><br>
          <button class="btn btn-outline-primary">Create Account</button>
        </form>

      </div>
    </div>

  </div>
</div>

<%- include ('partials/footer') %>
<script src="/javascripts/formvalidation.js"></script> 
<%- include ('partials/endtags') %>